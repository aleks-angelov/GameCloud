<Window x:Name="LibraryWindow" x:Class="GameCloud.GameLibrary"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Icon="icon.png"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Title="Game Cloud Library" Height="720" Width="1280">
    <Window.Background>
        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
            <GradientStop Color="#FF191919" Offset="0" />
            <GradientStop Color="#FF662D90" Offset="1" />
        </LinearGradientBrush>
    </Window.Background>
    <Grid x:Name="LibraryGrid">
        <Image x:Name="GameImage1" HorizontalAlignment="Left" Height="200" Margin="44,50,0,0" Source="game1.png"
               VerticalAlignment="Top" Width="200" />
        <Label x:Name="GameLabel1" Content="Batman: Arkham City" HorizontalAlignment="Left"
               HorizontalContentAlignment="Center" Margin="44,255,0,0" VerticalAlignment="Top" Width="200"
               Foreground="White" FontWeight="Bold" FontSize="16" />
        <Button x:Name="GameButton1" Content="PLAY" HorizontalAlignment="Left" Margin="44,291,0,0"
                VerticalAlignment="Top" Width="200" Click="gameButton_Click" Background="#FF323E4D" Foreground="White"
                FontSize="16" FontWeight="Bold" />
        <Image x:Name="GameImage2" HorizontalAlignment="Left" Height="200" Margin="288,50,0,0" Source="game2.jpg"
               VerticalAlignment="Top" Width="200" />
